<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="app.com.klexos.android.urbanevolution.urbanfit.UrbanFitHome">

    <Button
        android:id="@+id/full_work_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Full Body Workout" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Arms Workout" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Core Workout" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lower Body Workout" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Legs Workout" />
</LinearLayout>
